/**
 * Exclusive-or gate:
 * out = (((a == 0) & (b = 1)) | ((a == 1) & (b = 0)), 1, 0)
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
	Not(in=a, out=notA);
	Not(in=b, out=notB);
    And(a=a, b=notB, out=out1);
	And(a=notA, b=b, out=out2);
	Or(a=out1, b=out2, out=out);
}